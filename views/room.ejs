<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div id="invited" style="width:100px;height:50px;float:right">
    </div>
    <div id="messageleaveRoom">
    </div>
<div class="container clearfix" style="width: 500px;">
  <div class="controls" style="border: none; width: 100%;">
      <a href="/logout" class="logout-btn" style="width: auto; padding: 13px; font-size: 12px;">Logout</a>
  </div>

  <div class="room" style="width: 100%;">
    <div class="room-header clearfix">
      <div class="room-about">
        <div class="room-title">Rooms</div>
        <div class="room-num-rooms"><%= data.length %> Room(s)</div>
      </div>
      <i class="fa fa-th-list"></i>
    </div> <!-- end room-header -->

    <div class="room-create clearfix" style="border-bottom: 2px solid white;">
      <input id="title" type="text" name="title" autofocus placeholder ="Type a new room">
      <button>Create</button>
    </div> <!-- end room-create -->
    <div class="room-list">
      <ul id="list-rooms">
        <% if(data.length > 0) { %>
          <% data.forEach(function(room) { %>
              <a id="<%= room.id_room %>" href="/chat/<%= room.id_room %>"><li class="room-item"><%= room.name %></li></a>
            <% }); %>
            <% }
         %>
      </ul>
    </div> <!-- end room-list -->
  </div> <!-- end room -->

</div> <!-- end container -->
<script src="/socket.io/socket.io.js"></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
  <script src="/js/rooms.js"></script>
  <script src="/lib/download.js"></script>
  <script>$(function(){app.rooms(<%=user.id%>)});</script>
  </body>
</html>
